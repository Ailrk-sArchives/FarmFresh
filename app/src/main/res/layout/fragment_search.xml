<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#8FCC80"


    tools:context=".ui.search.SearchFragment">

    <!--TODO: Add autofill hints to search bar-->
    <!--TODO: Link category buttons to their respective categories-->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A9A9A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_bold"
        android:text="Categories"
        android:textColor="#3A3A3A"
        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.063" />

    <!--TODO: Round the corners of buttons-->
    <Button
        android:id="@+id/fruit"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/orange"
        android:onClick="fruitCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Fruit"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruit"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/veggie"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/veggie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toEndOf="@+id/fruit"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Veggies"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/veggie"
        app:layout_constraintVertical_bias="0.016" />

    <Button
        android:id="@+id/protein"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/protein"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toEndOf="@+id/veggie"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Protein"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/protein"
        app:layout_constraintVertical_bias="0.018" />

    <Button
        android:id="@+id/dairy"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/dairy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Dairy"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dairy"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/grain"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/grain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toEndOf="@+id/dairy"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.176" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Grain"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grain"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/sweets"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/cake"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/grain"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.176" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Sweets"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/sweets"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/plants"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/plant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Plants"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plants"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/jewelry"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/jewelry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toEndOf="@+id/plants"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Jewelry"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/jewelry"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/other"
        android:layout_width="250px"
        android:layout_height="250px"
        android:background="@drawable/clothing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/jewelry"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:fontFamily="@font/acaslonpro_semibold"
        android:gravity="center"
        android:text="Clothing"
        android:textColor="#3A3A3A"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/other"
        app:layout_constraintVertical_bias="0.145" />

</androidx.constraintlayout.widget.ConstraintLayout>